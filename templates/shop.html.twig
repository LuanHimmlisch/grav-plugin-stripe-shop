{% extends 'partials/shop_base.html.twig' %}

{% block content %}

    {{ parent() }}

    <div class="content-wrapper">
        {{ page.content|raw }}

        <div class="shop-categories">
            {% for child in page.collection() %}
                {% if (child.header.unpublished is not defined or (child.header.unpublished == false)) %}
                    {% include 'partials/shop_category_item.html.twig' with {'page': child, 'parent': page} %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
